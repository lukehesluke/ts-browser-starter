{
  "name": "@ts-with-prettier-starter-projects/nodejs",
  "version": "0.0.0",
  "description": "Fairly minimal NodeJS TypeScript starter project",
  "scripts": {
    "start": "node dist/main.js",
    "start:watch": "nodemon dist/main.js",
    "build": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc --watch",
    "ts-check": "tsc --noEmit",
    "test": "npm run lint && npm run prettier-format && npm run ts-check",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "Luke Winship",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": "18.18.0"
  }
}